<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.degrood21.mexican_train_dominoes.HelpMenu"
    android:background="@color/green_playboard">


    <LinearLayout
        android:layout_width="1008dp"
        android:layout_height="615dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rulesDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Rules"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rules1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="The objective of the game is to play all dominos or have the least number of pips."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="If a player has a domino that matches the side of a placed domino, the player may place the domino on the train. A player may only place a domino on their train or a public train."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="If a player has no playable dominoes, they must draw a domino and make their train public,
            meaning that other players can place a domino on their train."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="If a player with a public train draws a domino that can be played on their train, the train is no longer public."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="If a player plays a double domino, the next player must place a domino which matches on at least one side.
If they don't, every player after must either play a matching domino on that train or draw a domino until someone places a matching domino."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="The game ends when either a player has played all of the dominoes in their hand, or the draw pile is empty and no one can make any more moves."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:text="Find complete rules at: https://www.mexicantrainrulesandstrategies.com"
            android:textSize="18sp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="return"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
